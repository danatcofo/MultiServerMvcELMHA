@model IEnumerable<ElmahLogViewer.Data.IELMAH_Server>
<table>
    <tr>
        <th>
            Environment
        </th>
        <th>
            Name
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Environment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("View", "ErrorLog", new { serverId = item.ServerId }) |
                @Html.ActionLink("Delete", "Delete", new { serverId = item.ServerId })
            </td>
        </tr>
    }
</table>